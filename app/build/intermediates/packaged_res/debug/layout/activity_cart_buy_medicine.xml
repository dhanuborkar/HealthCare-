<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CartBuyMedicineActivity">

    <Button
        android:id="@+id/buttonCartBMedBack"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_bg"
        android:paddingBottom="5dp"
        android:text="BACK"
        android:textColor="#FAF6F6"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="324dp"
        android:layout_height="43dp"
        android:paddingStart="40dp"
        android:text="24*7 HealthCare"
        android:textColor="#F4EDED"
        android:textColorHighlight="#731FA6"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/textCBMedTitle"
        android:layout_width="193dp"
        android:layout_height="27dp"
        android:text="Lab Test Cart Items"
        android:textColor="#fff666"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <TextView
        android:id="@+id/textCBMedHeading"
        android:layout_width="224dp"
        android:layout_height="25dp"
        android:text="Deliver Location : PUNE"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.177" />

    <TextView
        android:id="@+id/textCartBMedTotalPrice"
        android:layout_width="200dp"
        android:layout_height="31dp"
        android:text="Total Price : 1298/-"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCBMedHeading"
        app:layout_constraintVertical_bias="0.643" />

    <Button
        android:id="@+id/buttonCBMCheckout"
        android:layout_width="143dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_bg"
        android:paddingBottom="5dp"
        android:text="CHECKOUT"
        android:textColor="#FAF6F6"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:id="@+id/textViewCBMedDeliveryDate"
        android:layout_width="125dp"
        android:layout_height="23dp"
        android:text="Select Deliver Date"
        android:textColor="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCBMedHeading"
        app:layout_constraintVertical_bias="0.724" />

    <Button
        android:id="@+id/buttonCBMedDate"
        style="?android:spinnerStyle"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:text="29/12/2023"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCBMedTitle"
        app:layout_constraintVertical_bias="0.831" />

    <ListView
        android:id="@+id/ListViewCBMed"
        android:layout_width="340dp"
        android:layout_height="318dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCBMedHeading"
        app:layout_constraintVertical_bias="0.056" />


</androidx.constraintlayout.widget.ConstraintLayout>